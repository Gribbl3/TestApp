    <Grid RowDefinitions="80*, 20*"
          ColumnDefinitions="50*, 50*"
          ColumnSpacing="10"
          BackgroundColor="DarkBlue"
          Margin="10">


        <!-- left registration form -->

        <VerticalStackLayout 
            Grid.Column="0"
            Spacing="20"
            Padding="10"
            WidthRequest="600"
            BackgroundColor="DarkGoldenrod">
            
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label Text="Student ID" VerticalTextAlignment="Center" WidthRequest="150"  />
                <Entry Placeholder="Enter Student ID" WidthRequest="300" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="First Name" VerticalTextAlignment="Center" WidthRequest="150"/>
                <Entry Placeholder="Enter First Name" WidthRequest="300"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Last Name" VerticalTextAlignment="Center" WidthRequest="150"/>
                <Entry Placeholder="Enter Last Name" WidthRequest="300"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Email" VerticalTextAlignment="Center" WidthRequest="150"/>
                <Entry Placeholder="Enter Email" WidthRequest="300"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Password" VerticalTextAlignment="Center" WidthRequest="150"/>
                <Entry Placeholder="Enter Password" IsPassword="True" WidthRequest="300" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Confirm Password" VerticalTextAlignment="Center" WidthRequest="150"/>
                <Entry Placeholder="Confirm Password" IsPassword="True" WidthRequest="300" ClearButtonVisibility="WhileEditing"/>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>


        <!-- right registration form-->

        <StackLayout Grid.Column="1"
                     Grid.Row="0"
                     BackgroundColor="Beige"
                     Padding="10">

            <Label Text="Gender" VerticalOptions="CenterAndExpand" />
            <Entry Placeholder="Enter Gender" />

            <Label Text="Birth Date" VerticalOptions="CenterAndExpand" />
            <DatePicker />

            <Label Text="Mobile No." VerticalOptions="CenterAndExpand" />
            <Entry Placeholder="Enter Mobile No." />

            <Label Text="City" VerticalOptions="CenterAndExpand" />
            <Entry Placeholder="Enter City" />

            <Label Text="School Program" VerticalOptions="CenterAndExpand" />
            <Entry Placeholder="Enter School Program" />

            <Label Text="Course" VerticalOptions="CenterAndExpand" />
            <Entry Placeholder="Enter Course" />

            <Label Text="Year Level" VerticalOptions="CenterAndExpand" />
            <Entry Placeholder="Enter Year Level" />
        </StackLayout>
        
        <!-- Bottom Buttons -->
        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Spacing="10">
            
            <Button Text="Submit" WidthRequest="100"></Button>
            <Button Text="Reset" WidthRequest="100"></Button>
            
        </HorizontalStackLayout>
    </Grid>
