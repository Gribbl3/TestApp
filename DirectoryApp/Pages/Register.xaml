<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DirectoryApp.Pages.Register"
             Title="Register">
    
    <Grid RowDefinitions="80*, 20*"
          ColumnDefinitions="50*, 50*"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          RowSpacing="15">
          <!--BackgroundColor="DarkBlue"-->
          <!--ColumnSpacing="10"-->
          


        <!-- left registration form -->
        <!--add comments each label and entry for documentation-->
        
        
        <VerticalStackLayout 
            Grid.Column="0"
            Spacing="10"
            Padding="10"
            WidthRequest="500">
            <!--BackgroundColor="DarkGoldenrod"-->
            
            
            
            <HorizontalStackLayout 
                Spacing="10"
                VerticalOptions="Center">
                
                <Label Text="Student ID" 
                       VerticalTextAlignment="Center"
                       WidthRequest="150"  />
                
                <Border Stroke="black">
                    <Entry x:Name="txtStudentID" 
                           Placeholder="" WidthRequest="300" 
                           SemanticProperties.Description="Required. Numeric values only"
                           MaxLength="5" />
                </Border>
            </HorizontalStackLayout>
                
            
            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="First Name" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                
                <Border Stroke="black">
                    <Entry Placeholder="" 
                           WidthRequest="300" 
                           SemanticProperties.Description="Required"
                           x:Name="txtFirstName"/>
                </Border>
            </HorizontalStackLayout>
            
            
            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="Last Name" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                
                <Border Stroke="black">
                    <Entry Placeholder="" 
                           WidthRequest="300" 
                           SemanticProperties.Description="Required"
                           x:Name="txtLastName"/>
                </Border>
            </HorizontalStackLayout>

            
            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="Email" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                
                <Border Stroke="black">
                    <Entry Placeholder="" WidthRequest="300" 
                           SemanticProperties.Description="Required"
                           x:Name="txtEmail"/>
                </Border>
            </HorizontalStackLayout>

            
            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="Password" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                
                <Border Stroke="black">
                    <Entry Placeholder="********" 
                           IsPassword="True" 
                           WidthRequest="300" 
                           ClearButtonVisibility="WhileEditing"
                           SemanticProperties.Description="Required. Minimum of 8 characters." x:Name="txtPassword"/>
                </Border>
            </HorizontalStackLayout>

            
            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="Confirm Password" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                
                <Border Stroke="black">
                    <Entry Placeholder="********" 
                           IsPassword="True" 
                           WidthRequest="300" 
                           ClearButtonVisibility="WhileEditing"
                           x:Name="txtConfirmPassword"/>
                </Border>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>


        <!-- right registration form-->

        <VerticalStackLayout 
            Grid.Column="1"
            Grid.Row="0"
            Padding="10"
            Spacing="10"
            WidthRequest="500">

            <!--BackgroundColor="DarkGreen"-->

            <HorizontalStackLayout Spacing="10"
                                   VerticalOptions="Center">
                <Label Text="Gender" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="120"  />
                <RadioButton Content="Male"></RadioButton>
                <RadioButton Content="Female"></RadioButton>
            </HorizontalStackLayout>

            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Birth Date" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                <Border Stroke="black">
                    <DatePicker WidthRequest="300" ></DatePicker>
                </Border>
            </HorizontalStackLayout>

            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Mobile No." 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150" />
                <Border Stroke="black">
                    <Entry WidthRequest="300" 
                           ToolTipProperties.Text="Number input only" 
                           x:Name="txtMobileNumber"/>
                </Border>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="City" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                <Border Stroke="black">
                    <Entry WidthRequest="300"/>
                </Border>
            </HorizontalStackLayout>

            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="School Program" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>
                
                <Border Stroke="black">
                    <Picker x:Name="pickerSchoolProgram" MinimumWidthRequest="300" >
                        <Picker.Items>
                            <x:String>Hi</x:String>
                            <x:String>Hello</x:String>
                            <x:String>Im allen</x:String>
                        </Picker.Items>
                    </Picker>
                </Border>
                
            </HorizontalStackLayout>

            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="Course" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>

                <Border Stroke="black">
                    <Picker x:Name="pickerCourse" MinimumWidthRequest="300">
                        <Picker.Items>
                            <x:String>Hello</x:String>
                            <x:String>BSCPE</x:String>
                            <x:String>Hi</x:String>
                        </Picker.Items>
                    </Picker>
                </Border>

            </HorizontalStackLayout>
            
            
            <HorizontalStackLayout 
                Spacing="10">
                
                <Label Text="Year Level" 
                       VerticalTextAlignment="Center" 
                       WidthRequest="150"/>

                <Border Stroke="black">
                    <Picker x:Name="pickerYearLevel" 
                            MinimumWidthRequest="300"
                            HorizontalOptions="Fill">
                        <Picker.Items>
                            <x:String>First Year</x:String>
                            <x:String>Second Year</x:String>
                            <x:String>Third Year</x:String>
                            <x:String>Fourth Year</x:String>
                        </Picker.Items>
                    </Picker>
                </Border>

            </HorizontalStackLayout>
        </VerticalStackLayout>
        
        <!-- Bottom Buttons -->
        <HorizontalStackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Spacing="15">

            <Button Text="Submit" 
                    WidthRequest="100" 
                    CornerRadius="12" 
                    FontAttributes="Bold" 
                    FontSize="15" 
                    BackgroundColor="#008fff" 
                    BorderColor="Black" 
                    x:Name="btnSubmit" 
                    Clicked="OnSubmitButtonClick"></Button>

            <Button Text="Reset" WidthRequest="100" 
                    CornerRadius="12" 
                    FontAttributes="Bold"
                    FontSize="15"  
                    BackgroundColor="#abadaf" 
                    BorderColor="Black" 
                    x:Name="btnReset" 
                    Clicked="OnResetButtonClick"></Button>

        </HorizontalStackLayout>
        
    </Grid>
</ContentPage>