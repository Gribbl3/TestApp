<?xml version="1.0" encoding="utf-8" ?>


<ContentPage
    x:Class="DirectoryApp.Pages.Register"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Register">

    <Grid
        ColumnDefinitions="50*, 50*"
        HorizontalOptions="Center"
        RowDefinitions="80*, 20*"
        RowSpacing="15"
        VerticalOptions="Center">
        <!--  BackgroundColor="DarkBlue"  -->
        <!--  ColumnSpacing="10"  -->



        <!--  left registration form  -->
        <!--  add comments each label and entry for documentation  -->


        <VerticalStackLayout
            Grid.Column="0"
            Padding="10"
            Spacing="10"
            WidthRequest="500">
            <!--  BackgroundColor="DarkGoldenrod"  -->



            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">

                <Label
                    Text="Student ID"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Entry
                        x:Name="txtStudentID"
                        MaxLength="5"
                        Placeholder=""
                        ToolTipProperties.Text="Required. Numeric values only"
                        WidthRequest="300">
                        <Entry.Behaviors>
                            <toolkit:NumericValidationBehavior MaximumValue="5" x:Name="StudentIDValidator"
                                                               Flags="ValidateOnAttaching,ValidateOnValueChanged"/>
                        </Entry.Behaviors>
                    </Entry>

                </Border>
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="First Name"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Entry
                        x:Name="txtFirstName"
                        Placeholder=""
                        ToolTipProperties.Text="Required"
                        WidthRequest="300" />
                </Border>
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="Last Name"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Entry
                        x:Name="txtLastName"
                        Placeholder=""
                        ToolTipProperties.Text="Required"
                        WidthRequest="300" />
                </Border>
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="Email"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Entry
                        x:Name="txtEmail"
                        Placeholder=""
                        ToolTipProperties.Text="Required"
                        WidthRequest="300" />
                </Border>
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="Password"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Entry
                        x:Name="txtPassword"
                        ClearButtonVisibility="WhileEditing"
                        IsPassword="True"
                        Keyboard="Numeric"
                        Placeholder="********"
                        TextChanged="txtPassword_TextChanged"
                        ToolTipProperties.Text="Required. Minimum of 8 characters."
                        WidthRequest="300" />
                </Border>
                <Label x:Name="errorLabel" IsVisible="false" />
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="Confirm Password"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Entry
                        x:Name="txtConfirmPassword"
                        ClearButtonVisibility="WhileEditing"
                        IsPassword="True"
                        Placeholder="********"
                        WidthRequest="300" />

                </Border>
            </HorizontalStackLayout>

        </VerticalStackLayout>


        <!--  right registration form  -->

        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="1"
            Padding="10"
            Spacing="10"
            WidthRequest="500">

            <!--  BackgroundColor="DarkGreen"  -->

            <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                <Label
                    Text="Gender"
                    VerticalTextAlignment="Center"
                    WidthRequest="120" />
                <RadioButton x:Name="rdoMale" Content="Male" />
                <RadioButton x:Name="rdoFemale" Content="Female" />
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">
                <Label
                    Text="Birth Date"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />
                <Border Stroke="black">
                    <DatePicker x:Name="dateBirthDate" WidthRequest="300" />
                </Border>
            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">
                <Label
                    Text="Mobile No."
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />
                <Border Stroke="black">
                    <Entry
                        x:Name="txtMobileNumber"
                        ToolTipProperties.Text="Number input only"
                        WidthRequest="300" />
                </Border>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label
                    Text="City"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />
                <Border Stroke="black">
                    <Entry WidthRequest="300" />
                </Border>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="School Program"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Picker
                        x:Name="pickerSchoolProgram"
                        ItemsSource="{Binding SchoolProgram}"
                        SelectedIndexChanged="pickerSchoolProgram_SelectedIndexChanged"
                        WidthRequest="300">
                        <!--  Selected Item allows me to populate a variable in my Student Class  -->
                        <!--<Picker.Items>
                            <x:String>-SELECT-</x:String>
                        </Picker.Items>-->
                    </Picker>
                </Border>

            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="Course"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Picker
                        x:Name="pickerCourse"
                        ItemsSource="{Binding Courses}"
                        WidthRequest="300" />
                </Border>

            </HorizontalStackLayout>


            <HorizontalStackLayout Spacing="10">

                <Label
                    Text="Year Level"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />

                <Border Stroke="black">
                    <Picker
                        x:Name="pickerYearLevel"
                        ItemsSource="{Binding YearLevel}"
                        MinimumWidthRequest="300"
                        SelectedIndex="0"
                        WidthRequest="300" />
                </Border>

            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!--  Bottom Buttons  -->
        <HorizontalStackLayout
            Grid.Row="1"
            Grid.ColumnSpan="2"
            HorizontalOptions="Center"
            Spacing="15"
            VerticalOptions="Center">

            <Button
                x:Name="btnSubmit"
                BackgroundColor="#008fff"
                BorderColor="Black"
                Clicked="OnSubmitButtonClick"
                CornerRadius="12"
                FontAttributes="Bold"
                FontSize="15"
                Text="Submit"
                WidthRequest="100" />

            <Button
                x:Name="btnReset"
                BackgroundColor="#abadaf"
                BorderColor="Black"
                Clicked="OnResetButtonClick"
                CornerRadius="12"
                FontAttributes="Bold"
                FontSize="15"
                Text="Reset"
                WidthRequest="100" />

        </HorizontalStackLayout>

    </Grid>
</ContentPage>